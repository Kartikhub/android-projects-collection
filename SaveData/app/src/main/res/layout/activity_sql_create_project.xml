<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SqlCreateProjectActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_project_name"
        android:hint="Project name"/>
<TextView
    android:id="@+id/row_counters_amount_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Amount of counters to create"/>
    <com.example.lenovo.savedata.SqlCounterViewActivity
android:id="@+id/row_counters_amount"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/rows_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount of rows to create"/>
    <com.example.lenovo.savedata.SqlCounterViewActivity
        android:id="@+id/rows_amount"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<Button
    android:id="@+id/create_project_create_button"
    android:layout_width="wrap_content"
    android:text="Create project"
    android:layout_height="wrap_content" />
</LinearLayout>


